<Window x:Class="gradeStudent.Grade_Management_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gradeStudent"
        mc:Ignorable="d"
        Title="Grade_Management_Page" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Logout" FontFamily="Comic Sans MS" Cursor="Hand" FontSize="23" Width="120" Grid.Column="2" 
                VerticalAlignment="Top" HorizontalAlignment="Right" Background="BlueViolet" Click="Logout_click"></Button>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" >
            <Label Content="Select Student" Foreground="BlueViolet" FontSize="20"
        FontFamily="Comic Sans MS" Height="40" 
       Width="170" HorizontalAlignment="Left" Margin="13" />
            <ComboBox FontWeight="Bold" FontFamily="Comic Sans MS" FontSize="17" Name="studentBox" 
  Width="200" Height="40" Margin="-20" ></ComboBox>
            <Label Content="   Select Course" Foreground="BlueViolet" FontSize="20"
        FontFamily="Comic Sans MS" Height="40" 
       Width="170" HorizontalAlignment="Left" Margin="13" />
            <ComboBox FontWeight="Bold" FontFamily="Comic Sans MS" FontSize="17" Name="CourseBox" 
  Width="140" Height="40" Margin="-17" ></ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal"  Height="40">
            <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="Assignment" FontFamily="Comic Sans MS" FontSize="18" ></Label>
            <TextBox BorderBrush="DarkViolet" BorderThickness="2" Name="txtxAssign" Width="220" Margin="3"></TextBox>

            <Label VerticalAlignment="Top" Margin="4" HorizontalAlignment="Left" Content="Score" FontFamily="Comic Sans MS" FontSize="18" ></Label>
            <TextBox BorderBrush="DarkViolet" BorderThickness="2" Name="txtScore" Width="70" Margin="3"></TextBox>

            <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="MaxScore" FontFamily="Comic Sans MS" FontSize="18" ></Label>
            <TextBox BorderBrush="DarkViolet" BorderThickness="2" Name="txtMaxScore" Width="100" Margin="3"></TextBox>
        </StackPanel>
        <DataGrid Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2" Name="dgGrade" AutoGenerateColumns="True" CanUserAddRows="False" SelectionChanged="dgGrade_SelectionChanged" ></DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0" Width="440" Grid.ColumnSpan="3" Margin="196,42,164,30" Grid.RowSpan="2">
            <Button Content="Add" Width="120" Height="50" Margin="10" Background="Violet" Cursor="Hand" Click="Button_Click"></Button>
            <Button Content="Edit" Width="120" Height="50" Margin="10"  Cursor="Hand" Background="#FFA144E6" Click="Button_Click_1"></Button>
            <Button Content="Delete" Width="120" Height="50" Margin="1" Background="Violet" Cursor="Hand" Click="Button_Click_2"></Button>
        </StackPanel>
    </Grid>
</Window>
